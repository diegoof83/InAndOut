@model IEnumerable<InAndOut.Models.ExpenseCategory
    >

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> My Expense Categories </h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-controller="ExpenseCategory" asp-action="Create">Create</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td width="80%">@category.Name</td>
                        <td width="20%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="ExpenseCategory" asp-action="Update" asp-route-Id="@category.Id" class="btn btn-primary mx-1">Update</a>
                                <a asp-controller="ExpenseCategory" asp-action="Delete" asp-route-Id="@category.Id" class="btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Items created yet.</p>
    }
</div>